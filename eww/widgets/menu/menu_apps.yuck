;; Reusable app button widget
(defwidget app_button [icon name command]
  (button :class "app_btn"
          :tooltip "${name}"
          :onclick "${command} & eww close menu_popup"
    (box :orientation "v"
         :space-evenly false
         :spacing 4
      (label :class "app_icon" :text "${icon}")
      (label :class "app_name" :text "${name}" :limit-width 8))))